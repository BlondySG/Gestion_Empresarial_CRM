@model IEnumerable<FrontEnd.Models.TbVentaViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Facturación</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bi bi-bag-check"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Ventas</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->

<!--page main-->
<div class="row">
    <div class="col-sm-12">

        <!--Inicio tarjeta-->
        <div class="card">
            <h6 class="card-header mb-0 text-uppercase">Ventas</h6>
            <div class="card-body">
                <div class="table-responsive">
                    <p>
                        <a asp-action="Create"><button class="btn btn-success">Nueva Venta</button></a>
                    </p>
                    <table id="dataTable" class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                @* <th>
                                @Html.DisplayNameFor(model => model.IdVenta)
                                </th> *@
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaVenta)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MontoTotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Estado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdClienteV)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @* <td>
                                @Html.DisplayFor(modelItem => item.IdVenta)
                                </td> *@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaVenta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MontoTotal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TbCliente.NombreCliente)
                                    </td>
                                    <td>
                                        @Html.ActionLink("", "Edit",null, new { id=item.IdVenta }, new { @class="bi bi-pencil-fill text-warning"}) |
                                        @Html.ActionLink("", "Details",null, new { id=item.IdVenta }, new { @class="bi bi-eye-fill text-primary"}) |
                                        @Html.ActionLink("", "Delete",null, new { id=item.IdVenta }, new { @class="bi bi-trash-fill text-danger"})
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!--Fin tarjeta-->
        </div>
    </div>
</div>
<!--end page main-->