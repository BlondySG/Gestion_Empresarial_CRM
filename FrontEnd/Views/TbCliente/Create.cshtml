@model FrontEnd.Models.TbClienteViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Gestión</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bi bi-person-square"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Clientes</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->

<!--page main-->
<div class="row">
    <div class="col-sm-12">

        <!--Inicio tarjeta-->
        <div class="card">
            <h6 class="card-header mb-0 text-uppercase">Ingresar Cliente</h6>
            <div class="card-body">
                <div class="responsive">
                    <div class="row">
                        <div class="col-md-8">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @*   <div class="form-group">
                                <label asp-for="IdCliente" class="control-label"></label>
                                <input asp-for="IdCliente" class="form-control" />
                                <span asp-validation-for="IdCliente" class="text-danger"></span>
                                </div> *@
                                <div class="form-group">
                                    <label asp-for="NombreCliente" class="control-label"></label>
                                    <input asp-for="NombreCliente" class="form-control" />
                                    <span asp-validation-for="NombreCliente" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CorreoCliente" class="control-label"></label>
                                    <input asp-for="CorreoCliente" class="form-control" />
                                    <span asp-validation-for="CorreoCliente" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PersonaContacto" class="control-label"></label>
                                    <input asp-for="PersonaContacto" class="form-control" />
                                    <span asp-validation-for="PersonaContacto" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DireccionCliente" class="control-label"></label>
                                    <input asp-for="DireccionCliente" class="form-control" />
                                    <span asp-validation-for="DireccionCliente" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TelefonoCliente" class="control-label"></label>
                                    <input asp-for="TelefonoCliente" class="form-control" />
                                    <span asp-validation-for="TelefonoCliente" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                                    </label>
                                </div>
                                <br />
                                <div class="form-group">
                                    <input type="submit" value="Crear Cliente" class="btn btn-success" /> |
                                    @Html.ActionLink("Regresar", "Index","TbCliente", null, new { @class="btn btn-primary"})
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--Fin tarjeta-->
        </div>
    </div>
</div>
<!--end page main-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
