@model FrontEnd.Models.TbClienteViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Gestión</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bi bi-person-square"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Clientes</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->

<!--page main-->
<div class="row">
    <div class="col-sm-12">
        <h3>Está seguro que desea eliminar este cliente?</h3>
        <div>
            <hr />

            <!--Inicio tarjeta-->
            <div class="card">
                <h6 class="card-header mb-0 text-uppercase">Eliminar Cliente</h6>
                <div class="card-body">
                    <div class="responsive">
                        <div class="row">
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.IdCliente)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.IdCliente)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.NombreCliente)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.NombreCliente)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.CorreoCliente)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.CorreoCliente)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.PersonaContacto)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.PersonaContacto)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.DireccionCliente)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.DireccionCliente)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.TelefonoCliente)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.TelefonoCliente)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Activo)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <form asp-action="Delete" id="formulario" onsubmit="enviarFormulario(event)">
                            @Html.HiddenFor(model => model.IdCliente)
                            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                            @Html.ActionLink("Regresar", "Index","TbCliente", null, new { @class="btn btn-primary"})
                        </form>
                    </div>
                </div>
            </div>
            <!--Fin tarjeta-->
        </div>
    </div>
</div>
<!--end page main-->

@section Scripts{
    <script src="~/assets/js/confirmarEliminar.js"></script>
    }