                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.TelefonoContacto)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.TelefonoContacto)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.IdRol)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.TbRol.NombreRol)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Activo)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Activo)
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <br />
                    <div>
                        @Html.ActionLink("Editar", "Edit", new { id = Model.IdEmpleado }, new { @class="btn btn-warning"}) |
                        @Html.ActionLink("Regresar", "Index","TbEmpleado", null, new { @class="btn btn-primary"})
                    </div>

                </div>
            </div>
            <!--Fin tarjeta-->

        </div>
    </div>
</div>
<!--end page main-->