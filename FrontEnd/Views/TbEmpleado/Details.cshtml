                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.IdEmpleado)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.IdEmpleado)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Cedula)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Cedula)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.RutaFoto)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.RutaFoto)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Nombre)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Apellido1)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Apellido1)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Apellido2)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Apellido2)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.TelefonoEmpleado)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.TelefonoEmpleado)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.CorreoEmpleado)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.CorreoEmpleado)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Direccion)
